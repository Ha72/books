<h3 class="title is-3">Recently Updated Books</h3>

<p class="is-size-6 is-italic">
    Tags: <%= link_to "new", books_new_path %>, 
    <strong>recently updated</strong>
</p>

<div class="columns is-mobile is-multiline is-centered is-variable is-8">
    <% @updated_books.each do |book| %>
        <%= render partial: 'book', object: book %>
    <% end %>
</div>

<div class="mt-5 mb-6 columns">
    <div class="column">
    </div>
    
    <div class="column is-one-quarter">
        <%= paginate @updated_books %>
    </div>
</div>
